#include<stdio.h>
 
int main(){
        int t;
        scanf("%d",&t);
        if(0<t<=1000){
                while(t--){
                        int n;
                        scanf("%d",&n);
                        if(0<n<=1000000000){
                                if(n%2==0 && n!=2)
                                        printf("%d\n",n/2);
                                if(n==2)
                                        printf("1\n");
                                if(n%2!=0 && n!=1)
                                        printf("%d\n",(n+1)/2);
                                if(n==1)
                                        printf("1\n");
                        }
                }
        }
}
